.row
  .col-md-6.col-md-offset-3
    - if params[:plan] == '2'
      %h1.text-center Pro Account
      %p.text-center  Sign up for the pro account for $10/month and get access to the community and contact information!
    - else
      %h1.text-center Basic Account
      %p.text-center Sign up for free and get basic access to the community.
  %div.col-md-6.col-md-offset-3
    .well
      - if params[:plan] == '2'
        = render "pro_form"
      - else
        = render "basic_form"
    
      = render "devise/shared/links"
